@section Scripts {
    <script>
        $(document).ready(function () {
            $('.toggle-collapse').on('click', function () {
                const target = $(this).data('target');
                $(target).collapse('toggle');
                $(this).find('i').toggleClass('fa-chevron-right fa-chevron-down');
            });
        });
    </script>
}
